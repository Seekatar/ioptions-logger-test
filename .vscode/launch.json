    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/bin/Debug/net6.0/options-logger-test.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
                 ,"uriFormat": "%s/swagger"
            },

            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",

                "FromEnvironment": "EnvironmentSettings1",

                "Configuration:FromEnvironment": "EnvironmentSettings2",

                "Monitored:FromEnvironment": "EnvironmentSettings3",

                "Snapshot:FromEnvironment": "EnvironmentSettings4",

                "OneTime:FromEnvironment": "EnvironmentSettings5"

            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }

    ]
}